<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/overpass_semibold"
        android:text="About Me!"
        android:textColor="#000"
        android:textSize="35sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dev"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/developer" />


    <TextView
        android:id="@+id/namedev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dev"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/overpass_semibold"
        android:gravity="center"
        android:text="@string/developer_name"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emaildev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/namedev"
        android:layout_marginTop="2dp"
        android:background="@drawable/border_search"
        android:fontFamily="@font/overpass_semibold"
        android:gravity="center"
        android:text="@string/developer_email"
        android:textColor="#000"
        android:textSize="15sp" />
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_wave_admin"
    android:alpha="0.7"
    android:layout_marginBottom="-120dp"
    android:layout_alignParentBottom="true"
    />

</RelativeLayout>