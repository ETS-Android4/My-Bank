<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="#fff"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    >



<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:layout_height="730dp"
    >

<!--    <com.smarteist.autoimageslider.SliderView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="180dp"-->

<!--        android:id="@+id/imageSlider"/>-->

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="180dp"
        android:id="@+id/card"
        android:layout_alignParentTop="true"
        android:elevation="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:background="@drawable/gradient1"

        >


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/overpass_semibold"
            android:paddingLeft="20dp"
            android:text="Name"
            android:textColor="#000" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-5dp"
            android:paddingLeft="20dp"
            android:text="Loading ..."
            android:fontFamily="@font/overpass_semibold"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="108dp"
            android:fontFamily="@font/overpass_semibold"
            android:paddingLeft="20dp"
            android:text="Amount(INR)"
            android:textColor="#000" />

        <TextView
            android:id="@+id/Amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:fontFamily="@font/overpass_semibold"
            android:text="0"
            android:textColor="#000"
            android:textSize="30sp" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:src="@drawable/money"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/card"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:id="@+id/loadingText"
        android:layout_marginTop="20dp"
        android:background="@drawable/loading_text"
        android:textColor="#000"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:fontFamily="@font/overpass_semibold"/>

        <ImageView
            android:id="@+id/dashboard_ad"
            android:layout_width="250dp"
            android:layout_height="140dp"
            android:layout_below="@id/loadingText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/loading_text" />



        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/relat"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="#dfdfdf"
            android:id="@+id/ads_image"
            android:scaleType="centerCrop"
            android:layout_toEndOf="@id/relat"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="187dp"
            android:layout_marginStart="85dp"/>

    </RelativeLayout>


    <Button
        android:id="@+id/add_money"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/corner"
        app:backgroundTint="@color/money_button_state"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="true"
        android:text="Add Money To Wallet"
        android:textColor="#fff"
        />

    <Button
        android:id="@+id/sendmoneynow"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="255dp"
        android:background="@drawable/corner"
        app:backgroundTint="@color/money_button_state"
        android:clickable="true"
        android:elevation="2dp"
        android:text="Send Money"
        android:textColor="#fff" />



</RelativeLayout>
</ScrollView>
